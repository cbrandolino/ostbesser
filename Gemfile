source 'https://rubygems.org'


# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.1.8'


# Compilers
gem 'uglifier', '>= 1.3.0'
gem 'sass-rails', '~> 4.0.3'
gem 'coffee-rails', '~> 4.0.0'
gem 'haml-rails'

# Front-end libraries
gem 'bootstrap-sass'
gem 'jquery-rails'

# Back-end libraries
gem 'nokogiri'

gem 'turbolinks'
gem 'jbuilder', '~> 2.0'

group :doc do
  gem 'sdoc', '~> 0.4.0'
end

group :development do
  gem 'sqlite3'
  gem 'spring'
end

group :test do
  gem 'rake'
end